<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <GridLayout rows="*, auto">
        <StackLayout row="0">
            <!-- Map View -->
            <ContentView height="300">
                <ns:MapView></ns:MapView>
            </ContentView>
            
            <!-- Service List -->
            <ns:ServiceList></ns:ServiceList>
        </StackLayout>

        <!-- Bottom Action Button -->
        <Button row="1" text="Find Service Provider" 
                class="primary-button m-4" 
                tap="{{ findServiceProvider }}" />
    </GridLayout>
</Page>